{
  "compilerOptions": {
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "declaration": true,
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }, 
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
